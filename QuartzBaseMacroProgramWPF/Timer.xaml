<Window x:Class="QuartzBaseMacroProgramWPF.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuartzBaseMacroProgramWPF"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Timer" Height="300" Width="300"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Offset="1" />
            <GradientStop Color="White" Offset="0.547" />
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="count" Text="3" FontSize="100" />
        </StackPanel>
    </Grid>
</Window>